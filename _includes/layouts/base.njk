<!doctype html>
<html lang="{{ metadata.language }}">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title or metadata.title }}</title>
    <meta name="description" content="{{ description or metadata.description }}">

    <meta name="generator" content="{{ eleventy.generator }}">

    <link rel="icon" type="image/x-icon" href="{{ '/img/favicon.ico' | url }}">
    <link rel="stylesheet" href="{{ '/css/index.css' | url }}">
    <link rel="stylesheet" href="{{ '/css/prism-base16-monokai.dark.css' | url }}">
    <link rel="stylesheet" href="{{ '/css/prism-diff.css' | url }}">
    <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
    <link rel="alternate" href="{{ metadata.jsonfeed.path | url }}" type="application/json" title="{{ metadata.title }}">
    <script type="module" src="https://unpkg.com/@google/model-viewer/dist/model-viewer.min.js"></script>
  </head>
  <body>
    <header>
      <h1 class="home"><a href="{{ '/' | url }}">Justin Shrake</a></h1>

      {#- Read more about `eleventy-navigation` at https://www.11ty.dev/docs/plugins/navigation/ #}
      <ul class="nav">
      {%- for entry in collections.all | eleventyNavigation %}
        <li class="nav-item{% if entry.url == page.url %} nav-item-active{% endif %}"><a href="{{ entry.url | url }}">{{ entry.title }}</a></li>
      {%- endfor %}
      </ul>

      <div class="social-nav">
      {%- if metadata.socials.email %}
        <a href="mailto:{{ metadata.socials.email}}" target="_blank" rel="noopener noreferrer">
          {%- fortawesomeSolid 'envelope',  "social-icon" -%}
        </a>
      {% endif -%}
      {%- if metadata.socials.github %}
        <a href="https://github.com/{{ metadata.socials.github}}" target="_blank" rel="noopener noreferrer">
          {%- fortawesomeBrand 'github',  "social-icon" -%}
        </a>
      {% endif -%}
      {%- if metadata.socials.mastodon %}
        <a rel="me" href="{{ metadata.socials.mastodon }}">
          {%- fortawesomeBrand 'mastodon',  "social-icon" -%}
        </a>
      {% endif -%}
      {%- if metadata.socials.kofi %}
        <a href="https://ko-fi.com/{{ metadata.socials.kofi | replace("@", "") }}" target="_blank" rel="noopener noreferrer">
          {%- fortawesomeSolid 'coffee',  "social-icon" -%}
        </a>
      {% endif -%}
      {%- if metadata.socials.instagram %}
        <a href="https://instagram.com/{{ metadata.socials.instagram }}" target="_blank" rel="noopener noreferrer">
          {%- fortawesomeBrand 'instagram',  "social-icon" -%}
        </a>
      {% endif -%}
      {%- if metadata.socials.twitter %}
        <a href="https://twitter.com/{{ metadata.socials.twitter | replace("@", "") }}" target="_blank" rel="noopener noreferrer">
          {%- fortawesomeBrand 'twitter',  "social-icon" -%}
        </a>
      {% endif -%}
      </div>


    </header>

    <main{% if templateClass %} class="{{ templateClass }}"{% endif %}>
      {{ content | safe }}
    </main>

    <footer></footer>

    <!-- Current page: {{ page.url | url }} -->
  </body>
</html>
